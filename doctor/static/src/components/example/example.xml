<templates xml:space="preserve">    <t t-name="doctor.ExampleComponent" owl="1">
        <div class="alert alert-info">
            <h4>Example OWL Component</h4>
            <p>Patient ID: <strong><t t-esc="state.patientId or 'Not found'"/></strong></p>
            <button class="btn btn-success" t-on-click="onClick">Click me</button>
            <t t-if="state.clicked">
                <p class="text-success">You clicked the button!</p>
            </t>
        </div>
    </t>
</templates>